<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".screens.entry.WelcomeFragment"
    android:background="?android:attr/windowBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVideoView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="100dp"
        android:clipToOutline="true">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationX="-30dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Кнопка входа -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/entry_screen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entry"
        android:layout_marginTop="256dp"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardVideoView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Кнопка регистрации -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registration_screen_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:layout_marginTop="16dp"
        android:paddingVertical="12dp"
        app:cornerRadius="16dp"
        style="@style/Widget.MaterialComponents.Button"
        app:layout_constraintTop_toBottomOf="@id/entry_screen_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
