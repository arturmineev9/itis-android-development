<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".screens.AddContentFragment">

    <!-- Прямоугольник для отображения изображения -->
    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etTitle"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Название мема"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPreview"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Описание"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etTitle"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Теги (через запятую)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDescription"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:id="@+id/radioGroupSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etTags"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rbGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Из галереи" />

        <RadioButton
            android:id="@+id/rbUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="По ссылке" />
    </RadioGroup>

    <!-- Поле для ввода URL, по умолчанию скрыто -->
    <EditText
        android:id="@+id/etUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ссылка на изображение"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupSource"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnDownloadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Загрузить изображение по ссылке"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUrl"
        android:layout_marginTop="8dp"/>

    <!-- Кнопка выбора изображения из галереи -->
    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать изображение"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupSource"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnSaveMeme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Сохранить мем"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupSource" />

</androidx.constraintlayout.widget.ConstraintLayout>
