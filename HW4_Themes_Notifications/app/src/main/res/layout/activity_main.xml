<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- ImageView, теперь по центру сверху -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Кнопка удаления изображения -->
    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/circle_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView" />

    <!-- Кнопка для раскрытия/сворачивания контейнера -->
    <Button
        android:id="@+id/showColorsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать тему"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Контейнер с выбором цветов (скрыт по умолчанию) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/colorSelectionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/showColorsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Красный цвет -->
        <View
            android:id="@+id/redColorView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/red_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp" />

        <!-- Желтый цвет -->
        <View
            android:id="@+id/yellowColorView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/yellow_primary"
            app:layout_constraintStart_toEndOf="@id/redColorView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp" />

        <!-- Зеленый цвет -->
        <View
            android:id="@+id/greenColorView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/green_primary"
            app:layout_constraintStart_toEndOf="@id/yellowColorView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Поля для текста -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/notificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите текст"
        app:layout_constraintTop_toBottomOf="@id/showColorsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/notificationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите текст"
        app:layout_constraintTop_toBottomOf="@id/notificationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Spinner для приоритета -->
    <Spinner
        android:id="@+id/prioritySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/notificationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Кнопка "Показать уведомление" -->
    <Button
        android:id="@+id/showNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показать уведомление"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/prioritySpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка "Сбросить цвет" -->
    <Button
        android:id="@+id/resetColorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сбросить цвет"
        app:layout_constraintTop_toBottomOf="@id/showNotificationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
